<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    >
    <TextView android:id="@+id/messagenum" android:layout_width="150dip" android:layout_height="20dip"></TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:baselineAligned="true"
	    android:paddingTop="2dip"
	    android:paddingBottom="2dip">
		<TextView android:id="@+id/messagetext" android:layout_width="260dip" android:layout_height="35dip" android:paddingLeft="5dip" ></TextView>
		<ImageButton android:id="@+id/messagebutton" android:layout_width="40dip" android:layout_height="40dip" android:src="@drawable/zoom" ></ImageButton>
	</LinearLayout>
</LinearLayout>